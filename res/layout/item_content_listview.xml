<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/appicon_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tittle_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/appicon_imageView"
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/provider_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tittle_edit"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tittle_edit"
        android:textColor="#0000FF" />

    <TextView
        android:id="@+id/content_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/provider_edit"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/provider_edit" />

</RelativeLayout>